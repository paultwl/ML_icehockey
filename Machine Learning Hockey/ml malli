playerData = pd.read_csv('MLplayerdata2.csv')   #read data fetched from eliteprospects ADD DATAFILE

data = playerData.drop([' GP',' G',' A',' P',' PIM', ' +/-'], inplace = False, axis = 1) #drop unnecessary columns 


data.head(5)        

#edit data so that position is either 1 - forward(fwd,c,lw,rw) or 0 - defender(d,rd,ld)
#use PolynomialFeatures to predic

#x_values = playerData[['pos','PPG','placement']] 
#y_values = playerData[['success']]



rivi = 0

for player in data:
    position = data.iloc[rivi, 2][1]
    data.iloc[rivi, 2] = position
    rivi = rivi + 1
    
data.loc[data[' pos'] == 'L', ' pos'] = 2
data.loc[data[' pos'] == 'F', ' pos'] = 2
data.loc[data[' pos'] == 'R', ' pos'] = 2
data.loc[data[' pos'] == 'C', ' pos'] = 2
data.loc[data[' pos'] == 'D', ' pos'] = 1
